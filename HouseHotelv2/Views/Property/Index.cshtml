@model IEnumerable<HouseHotelv2.Infrastructure.Property>

@{
    ViewBag.Title = "Properties";
}

<h2>Properties</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit_description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Number_of_Bedrooms)
        </th>
